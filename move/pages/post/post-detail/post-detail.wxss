.postDetailBox{
  display: flex;
  flex-direction: column;
}
.postDetailBanner{
  width:100%;
  /* height:460rpx; */
}
.audio{
  width:102rpx;
  height:110rpx;
  position:absolute;
  left:50%;
  margin-left:-51rpx;
  top:180rpx;
  opacity: .6;
}

.postDetailHead{
  flex-direction: row;
  margin-top:20px;
  margin-left:20rpx;
}
.actor{
  width:64rpx;
  height:64rpx;
  vertical-align: middle;
}
.author{
  font-size:30rpx;
  font-weight:300;
  margin-left:20px;
  vertical-align: middle;
  color:#666;
}
.constText{
  font-size:24rpx;
  color:#999;
  vertical-align: middle;
  margin-left:20rpx;
}
.constTime{
  font-size:24rpx;
  margin-left:30rpx;
  vertical-align: middle;
  color:#999;
}
.constTitle{
  margin-left:40rpx;
  font-size:36rpx;
  font-weight:700;
  margin-top:30rpx;
  letter-spacing: 2px;
  color:#4b556c;

}

.tool{
  margin-top:20rpx;
}
.circleImg{
  float:right;
  margin-right:40rpx;
  vertical-align: middle;
}
.circleImg image{
  width:90rpx;
  height:90rpx;
}
.shareImg{
  margin-left:30rpx;
}
.line{
  width:660rpx;
  height:2rpx;
  background-color:#e5e5e5;
  vertical-align: middle;
  position:relative;
  top:46rpx;
  margin:0 auto;
  z-index: -99;
}
.detail{
  color:#666;
  margin:20rpx 30rpx 0 30rpx;
  letter-spacing: 2px;
}
