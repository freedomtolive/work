.postConWrap{
  display: flex;
  flex-direction: column;
  margin-top:20rpx;
  margin-bottom:40rpx;
  background-color:#fff;
  border-top:1px solid #ededed;
  border-bottom:1px solid #ededed;
}
.postAuthor{
  margin:10rpx 0 20rpx 10rpx;
}
.postAuthorImg{
  width:60rpx;
  height:60rpx;
  vertical-align:middle;

}
.postDate{
  margin-left:20rpx;
  vertical-align: middle;
  margin-bottom:5px;
  font-size:26rpx;
}
.postTitle{
  font-size:34px;
  font-weight:600;
  color:#333;
  margin-bottom:10px;
  margin-left:20px;
}
.postImg{
  width:100%;
  height:340rpx;
  margin:0 auto 15px;
}
.postContent{
  color:#666;
  font-size:28rpx;
  margin-bottom:20rpx;
  margin-left:20px;
  letter-spacing: 2px;
  line-height:40rpx;
}
.postLike{
  display: flex;
  flex-direction: row;
  margin-left:20px;
  line-height:16px;
  font-size:13px;
  padding-bottom:20rpx;
}
.postLikeImg{
  height:16px;
  width:16px;
  margin-right:8px;
  vertical-align: middle;
}
.postLikeFt{
  margin-right:20px;
  vertical-align: middle;

}