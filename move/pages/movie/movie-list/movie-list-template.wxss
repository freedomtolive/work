@import "../movie-item/movie-template";

.movieListContainer{
  background:#fff;
  display: flex;
  flex-direction: column;
}
.movieHead{
  display:flex;
  justify-content: space-between;
  padding:30rpx 20rpx 22rpx;
}
.movieListTitle{
  font-size:24rpx;
}
.more{
  display: flex;
  align-items: center;
}
.moreText{
  color:#1f4ba5;
  margin-right:10rpx;
}
.moreImg{
  width:9rpx;
  height:16rpx;
}
.movieCon{
  display: flex;
  justify-content: space-between;
}