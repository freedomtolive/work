/* pages/person/person.wxss */
page{
  height:100%;
}
.continer{
  height:100%
}
.imgBox{
  padding-top:100rpx;
  display: flex;
  justify-content: center;
}
.personImg{
  height:252rpx;
  width:170rpx;
}
.persongFt{
  display: flex;
  justify-content: center;
  margin-top:20rpx;
  text-align: center;
}
.loginBtn{
  width:300rpx;
  height:80rpx;
  background:#42b8f1;
  display: flex;
  align-items: center;
  justify-content: center;
  color:#fff;
  margin:60rpx auto 0;
  border-radius:3px;
}

.loginHead{
  height:300rpx;
  position:relative;
}
.loginHeadBg{
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  z-index:0;
}
.userTop{
  height:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position:relative;
}
.userIco{
  width:152rpx;
  height:152rpx;
  border-radius:50%;
}
.userName{
  height:24rpx;
  line-height:24rpx;
  margin-top:16rpx;
  color:#fff;
}
.userCon{
  color:#929292;
  font-size:14px;
}
.userItem{
  height:100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position:relative;
  border-bottom:1px solid #ddd;
  margin:0 60rpx;
}
.userItem:last-child{
  border-bottom:0;
}
.usetText{
  font-size:30rpx;
  line-height:30rpx;
  color:#333;
}