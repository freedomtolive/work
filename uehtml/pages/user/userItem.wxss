/* pages/user/userItem.wxss */
@import "/component/workList/workList";

.userHead{
  width:100%;
  height:400rpx;
  position:relative;
}
.userHead .userBg{
  position:absolute;
  top:0;
  left:0;
  width:100%;
  height:100%;
  z-index:0;
}
.userHeadCon{
  position:relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userHeadIco{
  width:152rpx;
  height:152rpx;
  margin-top:60rpx;
  border-radius:50%;
}
.userFtBox{
  display: flex;
  align-items: center;
  color:#fff;
  margin-top:12rpx;
}
.userName{
  font-size:32rpx;
  margin-right:8rpx;
}
.urecIco{
  width:32rpx;
  height:32rpx;
}
.userInfoBox{
  position:absolute;
  bottom:0;
  left:0;
  width:100%;
  height:100rpx;
  background-color:rgba(0,0,0,.4);
  display: flex;
  align-items: center;
}
.userInfoItem{
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-right:1px solid rgba(255,255,255,.2);
}
.userInfoBox>.userInfoItem:last-of-type{
  border-right:0;
}
.userInfoItem .userInfoNum{
  font-size:30rpx;
  line-height:36rpx;
  color:#fff;
}
.userInfoItem .userInfoFt{
  font-size:22rpx;
  line-height:22rpx;
  color:#b4b4b4;
}
.userList{
  padding:20rpx;
}